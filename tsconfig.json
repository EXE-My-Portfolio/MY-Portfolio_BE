{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./", // Root of your project
    "paths": {
      "@/*": ["src/*"] // Alias "@" points to the "src" folder
    },
    "outDir": "./dist", // Ensure compiled files go into "dist"
    "rootDir": "./src",  // Ensure TypeScript knows where your source files are
    "lib": ["esnext", "ES6"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "isolatedModules": true,
    "declarationMap": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "__tests__", "jest.config.ts"]
}
